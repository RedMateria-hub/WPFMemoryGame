<Window x:Class="MemoryGame.Views.ChooseTime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.Views"
        mc:Ignorable="d"
        Title="ChooseTime" Height="130" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Center" Name="TimeBlock" Height="15" Margin="0,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <Label Content="Input the number of seconds for the game" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="62,67,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="186,67,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Window>
